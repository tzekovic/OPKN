<%- include('../partials/header') %>

<div class="container">
    <h1>Incoming Orders</h1>

    <% if (orders.length === 0) { %>
        <p>No orders yet.</p>
    <% } else { %>
        <div class="card" style="overflow-x: auto;">
            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="background-color: var(--secondary-color); color: white;">
                        <th style="padding: 10px; text-align: left;">Order ID</th>
                        <th style="padding: 10px; text-align: left;">Book</th>
                        <th style="padding: 10px; text-align: left;">Buyer</th>
                        <th style="padding: 10px; text-align: left;">Date</th>
                        <th style="padding: 10px; text-align: left;">Type</th>
                        <th style="padding: 10px; text-align: left;">Status</th>
                        <th style="padding: 10px; text-align: left;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(o => { %>
                        <tr style="border-bottom: 1px solid #ccc;">
                            <td style="padding: 10px;">#<%= o.id %></td>
                            <td style="padding: 10px;"><%= o.book_title %></td>
                            <td style="padding: 10px;">
                                <a href="/users/<%= o.buyer_id %>"><%= o.buyer_name %></a>
                            </td>
                            <td style="padding: 10px;"><%= new Date(o.created_at).toLocaleDateString() %></td>
                            <td style="padding: 10px;"><%= o.type %></td>
                            <td style="padding: 10px; font-weight: bold;">
                                <%= o.status %>
                            </td>
                            <td style="padding: 10px;">
                                <div style="display: flex; gap: 5px; flex-wrap: wrap;">
                                    <% if (o.status !== 'accepted' && o.status !== 'completed' && o.status !== 'cancelled') { %>
                                        <form action="/seller/orders/<%= o.id %>/status" method="POST">
                                            <input type="hidden" name="status" value="accepted">
                                            <button type="submit" class="btn" style="padding: 5px 10px; font-size: 0.8rem; background-color: #27ae60;">Accept</button>
                                        </form>
                                    <% } %>

                                    <% if (o.status !== 'rejected' && o.status !== 'completed' && o.status !== 'cancelled') { %>
                                        <form action="/seller/orders/<%= o.id %>/status" method="POST">
                                            <input type="hidden" name="status" value="rejected">
                                            <button type="submit" class="btn" style="padding: 5px 10px; font-size: 0.8rem; background-color: #c0392b;">Reject</button>
                                        </form>
                                    <% } %>
                                    
                                    <% if (o.status === 'accepted') { %>
                                         <form action="/seller/orders/<%= o.id %>/status" method="POST">
                                            <input type="hidden" name="status" value="completed">
                                            <button type="submit" class="btn" style="padding: 5px 10px; font-size: 0.8rem; background-color: #2980b9;">Complete</button>
                                        </form>
                                    <% } %>

                                    <!-- Undo Reject Logic -->
                                    <% if (o.status === 'rejected') { %>
                                        <form action="/seller/orders/<%= o.id %>/status" method="POST">
                                           <input type="hidden" name="status" value="pending">
                                           <button type="submit" class="btn" style="padding: 5px 10px; font-size: 0.8rem; background-color: #f39c12;">Reset</button>
                                       </form>
                                   <% } %>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
