<%- include('../partials/header') %>

<!-- Hero Section -->
<div style="background-color: var(--primary-color); color: white; padding: 40px 0; margin-bottom: 40px; text-align: center;">
    <div class="container">
        <h1>Find Your Next Good Read</h1>
        <p style="font-size: 1.2rem; margin-bottom: 20px;">Exchange, Buy, and Sell Used Books easily.</p>
        
        <form action="/search" method="GET" style="max-width: 600px; margin: 0 auto; display: flex;">
            <input type="text" name="q" placeholder="Search by title, author..." style="flex: 1; padding: 10px; border: none; border-radius: 4px 0 0 4px; font-size: 1rem;">
            <button type="submit" class="btn" style="border-radius: 0 4px 4px 0; background-color: var(--accent-color); color: var(--text-color); font-weight: bold;">Search</button>
        </form>
    </div>
</div>

<div class="container">
    
    <!-- Popular Books -->
    <h2 style="border-bottom: 2px solid var(--accent-color); padding-bottom: 10px; margin-bottom: 20px;">Popular Books</h2>
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 20px; margin-bottom: 40px;">
        <% popularBooks.forEach(book => { %>
            <div class="card" style="padding: 10px; display: flex; flex-direction: column;">
                <a href="/books/<%= book.id %>" style="text-decoration: none; color: inherit;">
                    <% if (book.image_url) { %>
                        <img src="<%= book.image_url %>" alt="<%= book.title %>" style="width: 100%; height: 250px; object-fit: cover; border-radius: 4px;">
                    <% } else { %>
                        <div style="width: 100%; height: 250px; background-color: #eee; display: flex; align-items: center; justify-content: center; border-radius: 4px;">No Image</div>
                    <% } %>
                    <h3 style="font-size: 1.1rem; margin: 10px 0 5px;"><%= book.title %></h3>
                    <p style="margin: 0; color: #666; font-size: 0.9rem;"><%= book.author %></p>
                    <p style="font-weight: bold; color: var(--primary-color); margin-top: 5px;">
                        <%= book.price > 0 ? '$' + book.price : 'Exchange' %>
                    </p>
                </a>
            </div>
        <% }) %>
    </div>

    <!-- Random Picks -->
    <h2 style="border-bottom: 2px solid var(--accent-color); padding-bottom: 10px; margin-bottom: 20px;">Random Picks</h2>
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 20px; margin-bottom: 40px;">
        <% randomBooks.forEach(book => { %>
            <div class="card" style="padding: 10px;">
                <a href="/books/<%= book.id %>" style="text-decoration: none; color: inherit;">
                    <% if (book.image_url) { %>
                        <img src="<%= book.image_url %>" alt="<%= book.title %>" style="width: 100%; height: 250px; object-fit: cover; border-radius: 4px;">
                    <% } else { %>
                        <div style="width: 100%; height: 250px; background-color: #eee; display: flex; align-items: center; justify-content: center; border-radius: 4px;">No Image</div>
                    <% } %>
                    <h3 style="font-size: 1.1rem; margin: 10px 0 5px;"><%= book.title %></h3>
                    <p style="margin: 0; color: #666; font-size: 0.9rem;"><%= book.author %></p>
                    <p style="font-weight: bold; color: var(--primary-color); margin-top: 5px;">
                        <%= book.price > 0 ? '$' + book.price : 'Exchange' %>
                    </p>
                </a>
            </div>
        <% }) %>
    </div>

    <!-- Recommendations (if any) -->
    <% if (recommendedBooks.length > 0) { %>
        <h2 style="border-bottom: 2px solid var(--accent-color); padding-bottom: 10px; margin-bottom: 20px;">Recommended For You</h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 20px; margin-bottom: 40px;">
            <% recommendedBooks.forEach(book => { %>
                <div class="card" style="padding: 10px;">
                    <a href="/books/<%= book.id %>" style="text-decoration: none; color: inherit;">
                        <% if (book.image_url) { %>
                            <img src="<%= book.image_url %>" alt="<%= book.title %>" style="width: 100%; height: 250px; object-fit: cover; border-radius: 4px;">
                        <% } else { %>
                            <div style="width: 100%; height: 250px; background-color: #eee; display: flex; align-items: center; justify-content: center; border-radius: 4px;">No Image</div>
                        <% } %>
                        <h3 style="font-size: 1.1rem; margin: 10px 0 5px;"><%= book.title %></h3>
                        <p style="margin: 0; color: #666; font-size: 0.9rem;"><%= book.author %></p>
                    </a>
                </div>
            <% }) %>
        </div>
    <% } %>

</div>

<%- include('../partials/footer') %>
