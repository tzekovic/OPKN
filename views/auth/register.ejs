<%- include('../partials/header') %>

<div style="max-width: 500px; margin: 0 auto;">
    <div class="card">
        <h2 style="text-align: center; color: var(--primary-color);">Register</h2>

        <% if (error) { %>
            <div style="background-color: #ffcccc; color: #cc0000; padding: 10px; border-radius: 4px; margin-bottom: 15px;">
                <%= error %>
            </div>
        <% } %>

        <form action="/register" method="POST">
            <div style="display: flex; gap: 10px; margin-bottom: 15px;">
                <div style="flex: 1;">
                    <label for="firstName">First Name</label>
                    <input type="text" name="firstName" id="firstName" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
                </div>
                <div style="flex: 1;">
                    <label for="lastName">Last Name</label>
                    <input type="text" name="lastName" id="lastName" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
                </div>
            </div>

            <div style="margin-bottom: 15px;">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
            </div>

            <div style="margin-bottom: 15px;">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" required style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
            </div>

            <div style="margin-bottom: 20px;">
                <label for="role">Register as:</label>
                <select name="role" id="role" style="width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;">
                    <option value="buyer">Buyer (I want to buy/exchange)</option>
                    <option value="seller">Seller (I want to listen books)</option>
                </select>
            </div>

            <button type="submit" class="btn" style="width: 100%;">Register</button>
        </form>
        <p style="text-align: center; margin-top: 15px;">
            Already have an account? <a href="/login" style="color: var(--primary-color);">Login here</a>.
        </p>
    </div>
</div>

<%- include('../partials/footer') %>
