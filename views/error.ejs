<%- include('partials/header') %>

<div class="container" style="text-align: center; padding: 50px 0;">
    <h1 style="color: #c0392b; font-size: 3rem;">Oops!</h1>
    <p style="font-size: 1.2rem; margin: 20px 0;"><%= message || 'Something went wrong.' %></p>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div style="background: #f1f1f1; padding: 15px; text-align: left; overflow: auto; margin-top: 20px;">
            <pre><%= error %></pre>
        </div>
    <% } %>

    <a href="/" class="btn" style="margin-top: 30px;">Go Home</a>
</div>

<%- include('partials/footer') %>
