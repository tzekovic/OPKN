<%- include('partials/header') %>
<div class="hero">
    <h1>Welcome to Book Exchange</h1>
    <p>The best place to find used books, exchange your collection, and meet other book lovers.</p>
</div>

<div class="section-header">
    <h2>Izdvojene Knjige</h2>
</div>

<div class="book-grid">
    <% popularBooks.forEach(book => { %>
        <div class="card book-card">
            <a href="/books/<%= book.id %>">
                <div class="book-image-container">
                    <% if (book.image_url) { %>
                        <img src="<%= book.image_url %>" alt="<%= book.title %>" class="book-image">
                    <% } else { %>
                        <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: var(--text-light);">No Image</div>
                    <% } %>
                </div>
                <h3 class="book-title"><%= book.title %></h3>
                <p class="book-author"><%= book.author %></p>
                <p class="book-price">
                    <%= book.price > 0 ? '$' + book.price : 'Exchange' %>
                </p>
            </a>
        </div>
    <% }) %>
</div>

<div class="card text-center">
    <h2>Preporuƒçene Knjige</h2>
    <p>Sign in to see recommendations based on your interests.</p>
</div>

